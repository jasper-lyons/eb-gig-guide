<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="text-5xl">
    Eastbourne Gig Guide
  </h1>

  <div id="gigs" class="min-w-full">
    <% previous_gig = nil %>
    <% @gigs.each do |gig| %>
      <% if previous_gig.nil? || gig.date != previous_gig.date %>
        <h3 class="text-3xl mt-4">
          <%= Date.parse(gig.date).strftime("%^a %-d %^b") %>
        </h3>
        <hr class="mt-5">
      <% end %>
      <% previous_gig = gig %>
      <%= render gig %>
    <% end %>
  </div>
</div>
