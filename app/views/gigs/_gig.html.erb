<div class="mt-5" id="<%= dom_id gig %>">
  <p>
    <% if action_name != "show" %>
      <%= link_to gig.name, gig, class: "underline" %>
    <% else %>
      <%= gig.name %>
    <% end %>
  </p>
  <p>
    <%= gig.venue %>
  </p>
  <p>
    <%= gig.doors_time_only %>
  </p>
  <hr class="mt-6">
</div>
