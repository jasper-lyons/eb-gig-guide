<div id="<%= dom_id gig %>">
  <p class="text-xl">
    <%= gig.name %>
  </p>
  <p>
    <%= gig.venue %>
  </p>
  <p>
    <%= gig.doors_time_only %>
  </p>

  <p>
  <% if link_acts %>
    <%= gig.acts.map { |act| link_to(act.name, act.weblink, class: 'underline') }.join(", ").html_safe %>
  <% else %>
    <%= @link_acts %>
    <%= gig.acts.map { |act| act.name }.join(", ").html_safe %>
  <% end %>
  </p>

  <p>
    <%= gig.socials %>
  </p>
</div>
